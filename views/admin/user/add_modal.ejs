
<div class="modal fade" id="add-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add user</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form">
          <div class="form-group">
            <label for="">GENERETE LINK PENDAFTARAN</label>
            <div class="form-group">
              <label>ROLES</label>
              <select class="form-control roles">
                <option value="admin">Admin</option>
                <option value="penulis"> penulis</option>
              </select>
            </div>
            <div class="form-group">
              <div class="input-group mb-2">
               
                <input type="text" class="form-control registerResetExpire" id="inlineFormInputGroup" name="registerResetExpire" placeholder="waktu aktif page register(default 10 menit)">
                <div class="input-group-prepend">
                  <div class="input-group-text">menit</div>
                </div>
              </div>
            </div>
            <button onclick="genereteLink()" type="button" class="btn btn-primary d-block mb-2 btn-code btn-sm  ">Generate</button>
            <input type="text" name="code"  class="form-control code" disabled hidden>
            <small class="text text-danger" hidden>TUNGGU 10 DETIK , UNTUK GENERETE ULANG CODE PENDAFTARAN</small>
            <button type="button" class="btn btn-success btn-sm mt-2 btn-copy" onclick="CopyText()" hidden>Copy Link</button>
          
          </div>
          <div class="form-group">
            <label for="">Atau Kirim Lewat Email</label>
            <input type="text" name="email"  class="form-control email" >
            <small class="text-success onSuccess" hidden>Email berhasil dikirim</small>
            <button onclick="sendEmail()" type="button" class="btn btn-primary d-block mt-5 btn-email btn-sm  ">Send</button>
          </div>
       
      </div>
   
    </form>
    </div>
  </div>
</div>

